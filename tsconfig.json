{
	"compilerOptions": {
		"lib": ["ES2018", "DOM"],
		"module": "node16",
		"moduleResolution": "node16",
		"strict": true,
		"target": "ES2018",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist"
	},
	"include": ["./src/**/*.ts", "./types/**/*.ts", "./tools/**/*.ts"],
}