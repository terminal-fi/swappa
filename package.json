{
  "name": "@terminal-fi/swappa",
  "version": "1.7.0",
  "repository": {
    "url": "https://github.com/terminal-fi/swappa"
  },
  "dependencies": {
    "@celo/connect": "^1.2.4",
    "@celo/contractkit": "^1.2.4",
    "@terminal-fi/savingscelo": "^3.4.0",
    "@ubeswap/default-token-list": "^4.0.11",
    "bignumber.js": "^9.0.1",
    "web3": "^1.3.4",
    "web3-utils": "^1.6.1"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "3.2.0",
    "@typechain/web3-v1": "^4.0.0",
    "commander": "^7.2.0",
    "eth-gas-reporter": "^0.2.22",
    "husky": "^7.0.0",
    "prettier": "2.5.1",
    "pretty-quick": "^3.1.3",
    "truffle": "^5.1.54",
    "truffle-flattener": "^1.5.0",
    "truffle-typings": "^1.0.8",
    "typechain": "^6.1.0",
    "typescript": "^4.0.5"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "compile:contracts": "yarn truffle compile && yarn typechain --target=web3-v1 'build/contracts/*.json'",
    "compile:ts": "yarn tsc -b",
    "build": "yarn compile:contracts && yarn compile:ts",
    "clean": "rm -rf ./build ./dist ./types",
    "prepublishOnly": "yarn clean && yarn build",
    "devchain": "rm -f ./src/deploy/ganache.*.json && yarn celo-devchain --port 7545",
    "deploy": "yarn ts-node ./src/deploy/deployer.ts",
    "prepare": "husky install"
  },
  "author": "Zviad Metreveli",
  "license": "MIT"
}
